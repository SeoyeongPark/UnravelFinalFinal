<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/jingle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.unravel.test.SingleTripActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="281dp"
        android:id="@+id/singleTripimage"
        app:srcCompat="@drawable/imagehere"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:paddingBottom="50dp"
        android:paddingTop="30dp"
        android:cropToPadding="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/singleTripTitle"
        android:text="Title"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_above="@+id/singleTripText"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"
        android:background="@drawable/border"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/singleTripText"
        android:text="Description"
        android:padding="10dp"
        android:layout_alignTop="@+id/singleRemoveBtn"
        android:layout_alignParentStart="true"
        android:layout_weight="0.31"
        android:background="@drawable/border"/>

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/takeBtn" />


</LinearLayout>
