<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.unravel.test.Countrylist"
    android:paddingTop="60dp"
    android:paddingLeft="10dp"
    >


    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/ccccameroon"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:text="Cameroon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView8"
        android:textSize="34sp"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_marginTop="10dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000"
        android:id="@+id/view2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/kkkkorea"
        android:layout_marginTop="10dp"
        android:id="@+id/imageView4"
        android:layout_below="@+id/view2"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginBottom="10dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000"
        android:id="@+id/view3"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:text="Korea , South"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView9"
        android:textSize="34sp"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/uuuuuuusa"
        android:layout_marginTop="10dp"
        android:id="@+id/imageView5"
        android:layout_below="@+id/view3"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:text="the United States"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView10"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5"
        android:layout_marginTop="10dp" />

</RelativeLayout>
