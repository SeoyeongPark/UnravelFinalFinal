<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_second_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.apple.navigate.MainActivity"
    android:background="@drawable/introimage1">

    <ImageView
        android:layout_width="85dp"
        app:srcCompat="@drawable/diarylogo"
        android:id="@+id/imageView"
        android:layout_height="90dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="112dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/introScreenOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textSize="23sp"
        tools:text="@string/introScreenTwo"
        android:textColor="@color/colorPrimaryNight"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:text="DIARY"
        android:textSize="30sp"
        android:fontFamily="serif"
        android:textColor="?android:attr/colorForegroundInverse"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

</RelativeLayout>
